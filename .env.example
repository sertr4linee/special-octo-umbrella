# Polymarket Configuration
# Your wallet private key (keep this secret!)
POLYMARKET__PRIVATE_KEY=0x_your_private_key_here
# Your wallet address that holds the funds
POLYMARKET__FUNDER_ADDRESS=0x_your_wallet_address_here
# Signature type: 0=EOA wallet, 1=Magic wallet, 2=Gnosis Safe
POLYMARKET__SIGNATURE_TYPE=0

# Trading Configuration
# Mode: paper (simulation) or live (real trading)
TRADING__MODE=paper
# Amount in USD to trade per position
TRADING__TRADE_AMOUNT_USD=10.0
# Trading interval in minutes
TRADING__INTERVAL_MINUTES=15
# Minimum confidence score to execute a trade (0.0 to 1.0)
TRADING__MIN_SCORE_THRESHOLD=0.6
# Maximum trades per day
TRADING__MAX_DAILY_TRADES=96

# Indicator Configuration (optional - defaults provided)
INDICATORS__RSI_PERIOD=14
INDICATORS__RSI_OVERBOUGHT=70.0
INDICATORS__RSI_OVERSOLD=30.0
INDICATORS__MACD_FAST=12
INDICATORS__MACD_SLOW=26
INDICATORS__MACD_SIGNAL=9
INDICATORS__EMA_SHORT=9
INDICATORS__EMA_LONG=21
INDICATORS__BB_PERIOD=20
INDICATORS__BB_STD_DEV=2.0
